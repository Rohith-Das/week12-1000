  <div class="container mt-5">
    <div class="card shadow-sm">
        <div class="card-header bg-primary text-white">
            <h2>Create Offer</h2>
        </div>
        <div class="card-body">
            <form action="/admin/dashboard/offers/create" method="POST">
                <div class="form-group mb-3">
                    <label for="offerName" class="form-label">Offer Name</label>
                    <input type="text" id="offerName" name="offerName" class="form-control" placeholder="Enter offer name" required>
                </div>

                <div class="form-group mb-3">
                  <label for="discount" class="form-label">Discount Percentage</label>
                  <input type="number" id="discount" name="discount" class="form-control" placeholder="Enter discount percentage" required>
              </div>

                <div class="form-group mb-3">
                    <label for="expireDate" class="form-label">Expire Date</label>
                    <input type="date" id="expireDate" name="expireDate" class="form-control" required>
                </div>

                <div class="form-group mb-3">
                    <label for="offerType" class="form-label">Offer Type</label>
                    <select name="offerType" id="offerType" class="form-select" required>
                        <option value="" disabled selected>Select offer type</option>
                        <option value="product">Product</option>
                        
                    </select>
                </div>

                <div class="form-group mb-3" id="productSelection" style="display: none;">
                  <label for="productReferences" class="form-label">Select Products</label>
                  <select name="references[]" id="productReferences" class="form-select" multiple>
                      <% products.forEach(product => { %>
                          <option value="<%= product._id %>"><%= product.productName %></option>
                      <% }) %>
                  </select>
              </div>

               

                <div class="form-group mb-3" id="selectedItemsContainer" style="display: none;">
                    <label class="form-label">Selected Items</label>
                    <div id="selectedItems" class="border p-2 rounded">
                        <!-- Selected items will be appended here -->
                    </div>
                </div>

                <div class="d-grid">
                    <button type="submit" class="btn btn-success btn-lg">Create Offer</button>
                </div>
            </form>
        </div>
    </div>
    <script>
      const offerTypeSelect = document.getElementById('offerType');
      const productSelection = document.getElementById('productSelection');
      const productReferences = document.getElementById('productReferences');
      const selectedItemsContainer = document.getElementById('selectedItemsContainer');
      const selectedItems = document.getElementById('selectedItems');
      const form = document.querySelector('form');
  
      offerTypeSelect.addEventListener('change', function() {
          productSelection.style.display = this.value === 'product' ? 'block' : 'none';
        
          selectedItems.innerHTML = ''; // Clear selected items on type change
          selectedItemsContainer.style.display = 'none'; // Hide selected items container on type change
      });
  
      function addItemToSelection(option) {
          const item = document.createElement('span');
          item.classList.add('selected-item');
          item.textContent = option.text;
          item.setAttribute('data-value', option.value);
  
          const removeBtn = document.createElement('button');
          removeBtn.classList.add('remove-item-btn');
          removeBtn.innerHTML = '&times;';
          removeBtn.addEventListener('click', function() {
              selectedItems.removeChild(item);
              option.selected = false; // Deselect the option
          });
  
          item.appendChild(removeBtn);
          selectedItems.appendChild(item);
          selectedItemsContainer.style.display = 'block'; // Show selected items container
      }
  
      function handleSelectionChange(selectionElement) {
          [...selectionElement.options].forEach(option => {
              if (option.selected && ![...selectedItems.children].some(child => child.getAttribute('data-value') === option.value)) {
                  addItemToSelection(option);
              }
          });
      }
  
      productReferences.addEventListener('change', function() {
          handleSelectionChange(productReferences);
      });
  
      categoryReferences.addEventListener('change', function() {
          handleSelectionChange(categoryReferences);
      });
  
      form.addEventListener('submit', function(e) {
          e.preventDefault();
  
          // Remove any existing hidden inputs for references
          form.querySelectorAll('input[name="references[]"]').forEach(el => el.remove());
  
          // Add hidden inputs for each selected item
          const selectedValues = [...selectedItems.children].map(item => item.getAttribute('data-value'));
          selectedValues.forEach(value => {
              const hiddenInput = document.createElement('input');
              hiddenInput.type = 'hidden';
              hiddenInput.name = 'references[]';
              hiddenInput.value = value;
              form.appendChild(hiddenInput);
          });
  
          console.log('Submitting form with references:', selectedValues);
  
          // Submit the form
          form.submit();
      });
  </script>
