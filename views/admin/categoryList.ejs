<div class="app-ecommerce-category">
  <!-- Category List Table -->
  
  <div class="container-fluid main-content">
    <% if (typeof message !== 'undefined') { %>
        <div class="alert alert-info">
            <%= message %>
        </div>
    <% } %>

    <div class="d-flex justify-content-between align-items-center mb-4">
        <form action="/admin/dashboard/categoryList" method="get" class="d-flex">
            <input type="text" name="search" class="form-control me-2" placeholder="Search categories..." value="<%= typeof search !== 'undefined' ? search : '' %>">
            <button type="submit" class="btn btn-primary">Search</button>
        </form>
        <button class="btn btn-success" id="openModalBtn">+ Add Category</button>
    </div>

    <div class="container">
      <div class="card mt-4">
          <div class="card-body">
              <!-- Table Section -->
              <div class="table-responsive">
                  <table class="table table-striped table-hover category-table">
                      <thead class="thead-dark">
                          <tr>
                              <th>S/N</th>
                              <th>Categories</th>
                              <th>Description</th>
                              <th>Status</th>
                              <th>Action</th>
                          </tr>
                      </thead>
                      <tbody>
                          <% if (categories && categories.length > 0) { %>
                              <% categories.forEach((category, index) => { %>
                                  <tr id="category-<%= category._id %>" class="<%= category.is_delete ? 'table-danger' : '' %>">
                                      <td><%= index + 1 %></td>
                                      <td><%= category.categoryName %></td>
                                      <td><%= category.description %></td>
                                      <td class="status-cell">
                                          <span class="badge <%= category.is_delete ? 'bg-danger' : 'bg-success' %>">
                                              <%= category.is_delete ? 'Unlisted' : 'Listed' %>
                                          </span>
                                      </td>
                                      <td>
                                          <button class="btn btn-warning btn-sm" onclick="openEditModal('<%= category._id %>', '<%= category.categoryName %>', '<%= category.description %>', '<%= category.status %>')">Edit</button>
                                          <button class="btn <%= category.is_delete ? 'btn-success' : 'btn-danger' %> btn-sm" onclick="toggleListUnlist('<%= category._id %>', '<%= category.is_delete ? true : false %>')">
                                              <%= category.is_delete ? 'List' : 'Unlist' %>
                                          </button>
                                      </td>
                                  </tr>
                              <% }) %>
                          <% } else { %>
                              <tr>
                                  <td colspan="5" class="text-center">No categories found</td>
                              </tr>
                          <% } %>
                      </tbody>
                  </table>
              </div>
  
              <!-- Pagination Section -->
              <div class="d-flex justify-content-between align-items-center">
                  <div>
                      Showing <%= (currentPage - 1) * 5 + 1 %> to <%= Math.min(currentPage * 5, totalCategories) %> of <%= totalCategories %> entries
                  </div>
                  <nav aria-label="Page navigation">
                      <ul class="pagination mb-0">
                          <li class="page-item <%= currentPage === 1 ? 'disabled' : '' %>">
                              <a class="page-link" href="?page=<%= currentPage - 1 %>&search=<%= search %>" <%= currentPage === 1 ? 'tabindex="-1"' : '' %>>Previous</a>
                          </li>
                          <% pages.forEach(page => { %>
                              <li class="page-item <%= currentPage === page ? 'active' : '' %>">
                                  <a class="page-link" href="?page=<%= page %>&search=<%= search %>"><%= page %></a>
                              </li>
                          <% }); %>
                          <li class="page-item <%= currentPage === totalPages ? 'disabled' : '' %>">
                              <a class="page-link" href="?page=<%= currentPage + 1 %>&search=<%= search %>" <%= currentPage === totalPages ? 'tabindex="-1"' : '' %>>Next</a>
                          </li>
                      </ul>
                  </nav>
              </div>
          </div>
      </div>
  </div>
  
