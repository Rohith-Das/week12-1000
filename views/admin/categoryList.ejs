<script>
    // Open Add Category Modal
    document.getElementById("openModalBtn").addEventListener("click", function() {
        var modal = new bootstrap.Modal(document.getElementById('myModal'));
        modal.show();
    });

    // Open Edit Category Modal
    function openEditModal(id, categoryName, description, status) {
        document.getElementById('editCategoryId').value = id;
        document.getElementById('editCategoryName').value = categoryName;
        document.getElementById('editDescription').value = description;
        document.getElementById('editStatus').value = status.toLowerCase();

        var modal = new bootstrap.Modal(document.getElementById('editModal'));
        modal.show();
    }

    document.getElementById('addCategoryForm').addEventListener('submit', async function(e) {
        e.preventDefault();
        
        const categoryNameInput = document.getElementById('categoryName');
        const descriptionInput = document.getElementById('description');
        
        // Validate all inputs
        const isCategoryNameValid = validateInput(categoryNameInput);
        const isDescriptionValid = validateInput(descriptionInput);
        
        if (!isCategoryNameValid || !isDescriptionValid) {
            Swal.fire({
                icon: 'error',
                title: 'Validation Error!',
                text: 'Please fill all fields with valid data (minimum 3 characters required)'
            });
            return;
        }
        
        const formData = new FormData(this);
        const data = Object.fromEntries(formData.entries());
        
        try {
            const response = await fetch('/admin/dashboard/categoryList', {
                method: 'POST',
                headers: {
                    'Content-Type': 'application/json'
                },
                body: JSON.stringify({
                    categoryName: data.categoryName.trim(),
                    description: data.description.trim(),
                    status: data.status
                })
            });
            
            const result = await response.json();
            
            if (result.success) {
                Swal.fire({
                    icon: 'success',
                    title: 'Success!',
                    text: result.message,
                    showConfirmButton: false,
                    timer: 1500
                }).then(() => {
                    location.reload();
                });
            } else {
                Swal.fire({
                    icon: 'error',
                    title: 'Error!',
                    text: result.message
                });
            }
        } catch (error) {
            Swal.fire({
                icon: 'error',
                title: 'Error!',
                text: 'Something went wrong!'
            });
        }
    });


    // Toggle List/Unlist Category
    function toggleListUnlist(id, isDeleted) {
        Swal.fire({
            title: 'Are you sure?',
            text: `Do you want to ${isDeleted ? 'list' : 'unlist'} this category?`,
            icon: 'warning',
            showCancelButton: true,
            confirmButtonColor: '#3085d6',
            cancelButtonColor: '#d33',
            confirmButtonText: 'Yes, proceed!'
        }).then((result) => {
            if (result.isConfirmed) {
                fetch(`/admin/dashboard/toggleCategoryStatus/${id}`, { 
                    method: 'POST' 
                })
                .then(response => response.json())
                .then(data => {
                    if (data.success) {
                        Swal.fire({
                            icon: 'success',
                            title: 'Success!',
                            text: data.message,
                            showConfirmButton: false,
                            timer: 1500
                        }).then(() => {
                            location.reload();
                        });
                    } else {
                        Swal.fire({
                            icon: 'error',
                            title: 'Error!',
                            text: data.message
                        });
                    }
                });
            }
        });
    }


    function validateInput(input) {
        // Remove extra spaces and check if empty
        const value = input.value.trim();
        const isValid = value.length >= 3; // Minimum 3 characters required
        
        if (!isValid) {
            input.classList.add('is-invalid');
            input.classList.remove('is-valid');
        } else {
            input.classList.remove('is-invalid');
            input.classList.add('is-valid');
        }
        
        return isValid;
    }

    // Add input event listeners for real-time validation
    document.getElementById('categoryName').addEventListener('input', function() {
        validateInput(this);
    });

    document.getElementById('description').addEventListener('input', function() {
        validateInput(this);
    });
    document.getElementById('myModal').addEventListener('hidden.bs.modal', function () {
        const form = document.getElementById('addCategoryForm');
        form.reset();
        
        const inputs = form.querySelectorAll('.form-control');
        inputs.forEach(input => {
            input.classList.remove('is-invalid', 'is-valid');
        });
    });
</script>





